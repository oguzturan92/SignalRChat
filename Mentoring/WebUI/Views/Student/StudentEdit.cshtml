@model StudentEditModel
@{
    ViewData["Title"] = "StudentEdit";
    Layout = "_LayoutStudent";
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">

                <div class="panel-heading">
                    Öğrenci Düzenle
                    <span class="tools pull-right">
                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                        <a class="fa fa-times" href="javascript:;"></a>
                    </span>
                </div>

                <div class="panel-body">
                    <div class="form">
                        <form class="cmxform form-horizontal" method="post" asp-controller="Student" asp-action="StudentEdit" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id">
                            <div class="form-group">
                                <label for="StudentImage" class="control-label col-lg-3">Resim</label>
                                <div class="col-lg-6">
                                    <input type="hidden" asp-for="StudentImage">
                                    <img src="~/img/@Model.StudentImage" alt="" class="z-editImg">
                                    <input name="file" type="file">
                                    <span class="validation" asp-validation-for="StudentImage"></span>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="Name" class="control-label col-lg-3">Ad</label>
                                <div class="col-lg-6">
                                    <span class="validation" asp-validation-for="Name"></span>
                                    <input asp-for="Name" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="Surname" class="control-label col-lg-3">Soyad</label>
                                <div class="col-lg-6">
                                    <span class="validation" asp-validation-for="Surname"></span>
                                    <input asp-for="Surname" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="Gender" class="control-label col-lg-3">Cinsiyet</label>
                                <div class="col-lg-6">
                                    <span class="validation" asp-validation-for="Gender"></span>
                                    <select asp-for="Gender" class="form-control">
                                        <option value="True">Erkek</option>
                                        <option value="False">Kadın</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="StartingYear" class="control-label col-lg-3">Başlangıç Tarihi</label>
                                <div class="col-lg-6">
                                    <span class="validation" asp-validation-for="StartingYear"></span>
                                    <input asp-for="StartingYear" class="form-control" type="date">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-6">
                                    <button class="btn btn-primary" type="submit">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>