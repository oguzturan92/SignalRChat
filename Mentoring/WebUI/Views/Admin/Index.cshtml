@model AdminModel
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<div class="wrapper">
    <div class="table-agile-info">
        <div class="panel panel-default">
            <div class="panel-heading">Kullanıcılar</div>

            @if (Model.Users.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped b-t b-light">
                        <thead>
                            <tr>
                                <th data-breakpoints="xs">ID</th>
                                <th>Kayıt Tarihi</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Email</th>
                                <th>Block Durumu</th>
                                <th colspan="1"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Users)
                            {
                                <tr data-expanded="true">
                                    <td>@item.Id</td>
                                    <td>@item.RegisterDate</td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Email</td>
                                    <td><a asp-controller="Admin" asp-action="UserBlock" asp-route-id="@item.Id" class="btn @(item.IsBlock == true ? "btn-danger":"btn-warning")">@(item.IsBlock == true ? "Açık":"Kapalı")</a></td>
                                    <td><a asp-controller="Admin" asp-action="UserDelete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return silOnayla();">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

