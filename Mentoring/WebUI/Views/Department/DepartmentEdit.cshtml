@model DepartmentModel
@{
    ViewData["Title"] = "DepartmentEdit";
    Layout = "_LayoutAdmin";
}

<div class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">

                    <div class="panel-heading">
                        Departman Düzenle
                        <span class="tools pull-right">
                            <a class="fa fa-chevron-down" href="javascript:;"></a>
                            <a class="fa fa-times" href="javascript:;"></a>
                        </span>
                    </div>

                    <div class="panel-body">
                        <div class="form">
                            <form class="cmxform form-horizontal" method="post" asp-controller="Department" asp-action="DepartmentEdit">
                                <input type="hidden" asp-for="DepartmentId">
                                <div class="form-group ">
                                    <label for="DepartmentRowNumber" class="control-label col-lg-3">Sıra Numarası</label>
                                    <div class="col-lg-6">
                                        <span class="validation" asp-validation-for="DepartmentRowNumber"></span>
                                        <input asp-for="DepartmentRowNumber" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="DepartmentName" class="control-label col-lg-3">Başlık</label>
                                    <div class="col-lg-6">
                                        <span class="validation" asp-validation-for="DepartmentName"></span>
                                        <input asp-for="DepartmentName" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-6">
                                        <button class="btn btn-primary" type="submit">Kaydet</button>
                                        <a asp-controller="Department" asp-action="DepartmentList" class="btn btn-default">Geri</a>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>